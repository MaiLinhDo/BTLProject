@model TMDTLaptop.Models.Class.ThongSoKyThuat
@{
    ViewBag.Title = "Cập nhật thông số";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h2 class="mt-4 mb-4">@ViewBag.Title</h2>
    @using (Html.BeginForm("SuaThongSo", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.MaThongSo)
        <div class="card">
            <div class="card-body">
                @Html.Partial("_ThongSoForm", Model)
                <button type="submit" class="btn btn-primary mt-3">
                    <i class="fas fa-save me-2"></i>Lưu thay đổi
                </button>
                <a class="btn btn-secondary mt-3 ms-2" href="@Url.Action("QuanLyThongSo")">Hủy</a>
            </div>
        </div>
    }
</div>

