@model IEnumerable<dynamic>

@{
    ViewBag.Title = "Thống Kê Kho Hàng Lỗi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h2 class="mt-4">@ViewBag.Title</h2>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Tổng Loại Sản Phẩm Lỗi</h5>
                            <h2>@ViewBag.TongSanPham</h2>
                            <small>loại sản phẩm</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Tổng Số Lượng Lỗi</h5>
                            <h2>@ViewBag.TongSoLuong</h2>
                            <small>sản phẩm</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-boxes fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <a href="@Url.Action("QuanLyKhoHangLoi", "Admin")" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Quay Lại Danh Sách
            </a>
            <a href="@Url.Action("ThemKhoHangLoi", "Admin")" class="btn btn-success">
                <i class="fas fa-plus"></i> Thêm Sản Phẩm Lỗi
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5><i class="fas fa-chart-bar"></i> Thống Kê Chi Tiết Theo Sản Phẩm</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Tổng Số Lượng Lỗi</th>
                                <th>Số Lần Nhập Lỗi</th>
                                <th>Mức Độ Ảnh Hưởng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 1;
                                int maxSoLuong = Model.Max(m => (int)m.TongSoLuong);
                            }
                            @foreach (var item in Model)
                            {
                                var mucDoAnhHuong = "";
                                var badgeClass = "";
                                var percentage = maxSoLuong > 0 ? ((int)item.TongSoLuong * 100 / maxSoLuong) : 0;

                                if (percentage >= 70)
                                {
                                    mucDoAnhHuong = "Cao";
                                    badgeClass = "badge-danger";
                                }
                                else if (percentage >= 40)
                                {
                                    mucDoAnhHuong = "Trung bình";
                                    badgeClass = "badge-warning";
                                }
                                else
                                {
                                    mucDoAnhHuong = "Thấp";
                                    badgeClass = "badge-success";
                                }

                                <tr>
                                    <td>@index</td>
                                    <td>
                                        <strong>@item.TenSanPham</strong>
                                    </td>
                                    <td>
                                        <span class="badge badge-warning badge-lg">@item.TongSoLuong</span>
                                        <div class="progress mt-1" style="height: 8px;">
                                            <div class="progress-bar bg-warning" style="width: @percentage%"></div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge badge-info">@item.SoLanNhap lần</span>
                                    </td>
                                    <td>
                                        <span class="badge @badgeClass">@mucDoAnhHuong</span>
                                    </td>
                                </tr>
                                index++;
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-4">
                    <h6>Biểu Đồ Thống Kê</h6>
                    <canvas id="chartKhoHangLoi" width="400" height="200"></canvas>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Chưa có dữ liệu thống kê</h5>
                    <p class="text-muted">Hiện tại chưa có sản phẩm nào trong kho hàng lỗi</p>
                    <a href="@Url.Action("ThemKhoHangLoi", "Admin")" class="btn btn-success">
                        <i class="fas fa-plus"></i> Thêm Sản Phẩm Lỗi Đầu Tiên
                    </a>
                </div>
            }
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card mt-4">
            <div class="card-header">
                <h5><i class="fas fa-lightbulb"></i> Khuyến Nghị</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle"></i> Sản Phẩm Cần Chú Ý</h6>
                            @{
                                var topError = Model.OrderByDescending(m => (int)m.TongSoLuong).First();
                            }
                            <p>Sản phẩm <strong>@topError.TenSanPham</strong> có số lượng lỗi cao nhất (@topError.TongSoLuong sản phẩm).</p>
                            <small>Nên kiểm tra chất lượng và quy trình xử lý cho sản phẩm này.</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="alert alert-warning">
                            <h6><i class="fas fa-tasks"></i> Hành Động Đề Xuất</h6>
                            <ul class="mb-0">
                                <li>Phân tích nguyên nhân gây lỗi</li>
                                <li>Liên hệ nhà cung cấp về chất lượng</li>
                                <li>Cải thiện quy trình kiểm tra</li>
                                <li>Xem xét chính sách bảo hành</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (Model != null && Model.Any())
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <script>
        // Tạo biểu đồ thống kê
        var ctx = document.getElementById('chartKhoHangLoi').getContext('2d');
        var chartData = {
            labels: [@Html.Raw(string.Join(",", Model.Select(m => "'" + m.TenSanPham.ToString().Replace("'", "\\'") + "'")))],
            datasets: [{
                label: 'Số Lượng Lỗi',
                data: [@Html.Raw(string.Join(",", Model.Select(m => m.TongSoLuong)))],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.8)',
                    'rgba(54, 162, 235, 0.8)',
                    'rgba(255, 205, 86, 0.8)',
                    'rgba(75, 192, 192, 0.8)',
                    'rgba(153, 102, 255, 0.8)',
                    'rgba(255, 159, 64, 0.8)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 205, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        };

        var myChart = new Chart(ctx, {
            type: 'bar',
            data: chartData,
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    title: {
                        display: true,
                        text: 'Thống Kê Số Lượng Sản Phẩm Lỗi Theo Từng Loại'
                    }
                }
            }
        });
    </script>
}