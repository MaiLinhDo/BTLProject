@model IEnumerable<dynamic>
@{
    ViewBag.Title = "Quản Lý Kho Hàng Lỗi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@if (TempData["SuccessMessage"] != null)
{
    <script>
        alert('@Html.Raw(TempData["SuccessMessage"])');
    </script>
}
<div class="container">
    <h2 class="mt-4">@ViewBag.Title</h2>
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="text-right">
                <a href="@Url.Action("ThongKeKhoHangLoi", "Admin")" class="btn btn-info">Xem Thống Kê</a>
                <a href="@Url.Action("ThemKhoHangLoi", "Admin")" class="btn btn-success">Thêm Sản Phẩm Lỗi</a>
            </div>
        </div>
    </div>
    <form method="get" action="@Url.Action("QuanLyKhoHangLoi", "Admin")">
        <div class="input-group mb-3">
            <input type="text" name="searchString" value="@ViewBag.SearchString"
                   class="form-control" placeholder="Tìm kiếm theo tên sản phẩm hoặc lý do" />
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-search"></i> Tìm kiếm
            </button>
        </div>
    </form>
    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Mã Kho Lỗi</th>
                        <th>Tên Sản Phẩm</th>
                        <th>Số Lượng</th>
                        <th>Ngày Nhập</th>
                        <th>Lý Do</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaKhoLoi</td>
                                <td>@item.TenSanPham</td>
                                <td>
                                    <span class="badge bg-warning text-white">@item.SoLuong</span>
                                </td>
                                <td>@DateTime.Parse(item.NgayNhap.ToString()).ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.LyDo</td>
                                <td>
                                    <button class="btn btn-danger btn-sm" onclick="xoaKhoHangLoi(@item.MaKhoLoi)">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">Không có dữ liệu</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("QuanLyKhoHangLoi", new { page = i, searchString = ViewBag.SearchString })">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
<script>
function xoaKhoHangLoi(maKhoLoi) {
    if (confirm('Bạn có chắc chắn muốn xóa bản ghi này?')) {
        $.ajax({
            url: '@Url.Action("XoaKhoHangLoi", "Admin")',
            type: 'POST',
            data: { maKhoLoi: maKhoLoi },
            success: function(response) {
                if (response.success) {
                    alert('Xóa thành công!');
                    location.reload();
                } else {
                    alert('Lỗi: ' + response.message);
                }
            },
            error: function() {
                alert('Có lỗi xảy ra khi xóa!');
            }
        });
    }
}
</script>