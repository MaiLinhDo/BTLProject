@model TMDTLaptop.Models.Class.DonHang

@{
    ViewBag.Title = "Chi Tiết Đơn Hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h2 class="mb-0">Chi Tiết Đơn Hàng #@ViewBag.Order.MaDonHang</h2>
        <div>
            <a href="@Url.Action("InHoaDon", new { id = ViewBag.Order.MaDonHang })" class="btn btn-outline-primary" target="_blank">
                <i class="fas fa-print me-2"></i>In hóa đơn
            </a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Thông Tin Đơn Hàng</h5>
            <p><strong>Mã Đơn Hàng:</strong> @ViewBag.Order.MaDonHang</p>
            <p><strong>Người đặt hàng:</strong> @ViewBag.Order.HoTen</p>
            <p><strong>Ngày Đặt:</strong> @ViewBag.Order.NgayDatHang</p>
            <p><strong>Tổng Tiền:</strong> @ViewBag.Order.TongTien đ</p>
            @if (ViewBag.Code != null)
            {
                <p><strong>Đã áp dụng mã giảm giá giảm:</strong> @ViewBag.GiamGia %</p>
            }
            <p><strong>Hình thức thanh toán:</strong> 
                @{
                    string hinhThucThanhToan = "";
                    if (ViewBag.Order.HinhThucThanhToan != null)
                    {
                        hinhThucThanhToan = ViewBag.Order.HinhThucThanhToan.ToString();
                    }
                    else
                    {
                        hinhThucThanhToan = "COD";
                    }
                    
                    string paymentBadgeClass = hinhThucThanhToan == "VNPAY" ? "bg-primary" : "bg-secondary";
                    string paymentText = hinhThucThanhToan == "VNPAY" ? "VNPay (ĐÃ thanh toán)" : "COD (Thanh toán khi nhận hàng)";
                }
                <span class="badge @paymentBadgeClass text-white">@paymentText</span>
            </p>
            <p><strong>Địa Chỉ Giao Hàng:</strong> @ViewBag.Order.DiaChiGiaoHang</p>
            <p><strong>Số Điện Thoại:</strong> @ViewBag.Order.SoDienThoai</p>
            <p><strong>Trạng Thái:</strong> @ViewBag.Order.TrangThai</p>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Chi Tiết Sản Phẩm</h5>
            <table class="table table-hover table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Mã Sản Phẩm</th>
                        <th scope="col">Tên Sản Phẩm</th>
                        <th scope="col">Số Lượng</th>
                        <th scope="col">Serial Number</th>
                        <th scope="col">Đơn Giá</th>
                        <th scope="col">Thành Tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.Details != null)
                    {
                        foreach (var chiTiet in ViewBag.Details)
                        {
                        <tr>
                            <td>@chiTiet.MaSanPham</td>
                            <td>@chiTiet.TenSanPham</td>
                            <td>@chiTiet.SoLuong</td>
                            <td>
                                @if (chiTiet.SerialNumbers != null && chiTiet.SerialNumbers.Count > 0)
                                {
                                    <div style="max-width: 300px;">
                                        @foreach (var serial in chiTiet.SerialNumbers)
                                        {
                                            <span class="badge bg-info text-white me-1 mb-1">@serial</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có serial</span>
                                }
                            </td>
                            <td>@chiTiet.Gia đ</td>
                            <td>@((chiTiet.SoLuong * chiTiet.Gia)) đ</td>

                        </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">Không có dữ liệu</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <a href="@Url.Action("QuanLyDonHang")" class="btn btn-secondary mt-3">Quay Lại</a>
</div>
