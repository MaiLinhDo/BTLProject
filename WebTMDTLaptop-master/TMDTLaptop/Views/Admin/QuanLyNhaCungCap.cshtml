@using System.Web
@model IEnumerable<TMDTLaptop.Models.Class.NhaCungCap>
@{
    ViewBag.Title = "Quản Lý Nhà Cung Cấp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var status = ViewBag.Status as int?;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h2>@ViewBag.Title</h2>
        <a href="@Url.Action("ThemNhaCungCap")" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Thêm nhà cung cấp
        </a>
    </div>

    @using (Html.BeginForm("QuanLyNhaCungCap", "Admin", FormMethod.Get, new { @class = "row g-2 mb-4" }))
    {
        <div class="col-md-6">
            <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Tìm theo tên, email, số điện thoại..." />
        </div>
        <div class="col-md-3">
            <select name="status" class="form-select">
                <option value="">Tất cả trạng thái</option>
                <option value="1" @(status == 1 ? "selected" : "")>Đang hoạt động</option>
                <option value="0" @(status == 0 ? "selected" : "")>Ngừng hoạt động</option>
            </select>
        </div>
        <div class="col-md-3 d-flex gap-2">
            <button class="btn btn-primary flex-grow-1" type="submit"><i class="fas fa-search me-2"></i>Tìm kiếm</button>
            <a href="@Url.Action("QuanLyNhaCungCap")" class="btn btn-outline-secondary">
                <i class="fas fa-undo"></i>
            </a>
        </div>
    }

    <div class="card">
        <div class="card-body table-responsive">
            <table class="table table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Tên nhà cung cấp</th>
                        <th>Liên hệ</th>
                        <th>Địa chỉ</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="fw-semibold">@item.TenNhaCungCap</div>
                                    @if (!string.IsNullOrWhiteSpace(item.MaSoThue))
                                    {
                                        <small class="text-muted">MST: @item.MaSoThue</small>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.SoDienThoai))
                                    {
                                        <div><i class="fas fa-phone me-1"></i>@item.SoDienThoai</div>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(item.Email))
                                    {
                                        <div><i class="fas fa-envelope me-1"></i>@item.Email</div>
                                    }
                                </td>
                                <td>@item.DiaChi</td>
                                <td>
                                    <span class="badge @(item.TrangThai == true ? "bg-success" : "bg-secondary")">
                                        @(item.TrangThai == true ? "Hoạt động" : "Ngừng hoạt động")
                                    </span>
                                </td>
                                <td>
                                    <a href="@Url.Action("SuaNhaCungCap", new { id = item.MaNhaCungCap })" class="btn btn-warning btn-sm me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("CapNhatTrangThaiNhaCungCap", new { id = item.MaNhaCungCap })"
                                       class="btn btn-outline-secondary btn-sm"
                                       onclick="return confirm('Bạn có chắc chắn muốn đổi trạng thái nhà cung cấp này?');">
                                        @(item.TrangThai == true ? "Ngưng" : "Kích hoạt")
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">Chưa có nhà cung cấp nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= (ViewBag.TotalPages ?? 1); i++)
            {
                var queryString = Request.QueryString != null ? Request.QueryString.ToString() : string.Empty;
                var query = HttpUtility.ParseQueryString(queryString);
                query["page"] = i.ToString();
                var url = Url.Action("QuanLyNhaCungCap") + "?" + query.ToString();
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link" href="@url">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>

