@functions {
    string GetStatusClass(string status)
    {
        switch (status.ToLower())
        {
            case "đang xử lý":
            case "pending":
                return "bg-warning";
            case "đã xác nhận":
            case "confirmed":
                return "bg-info";
            case "đang giao":
            case "shipping":
                return "bg-primary";
            case "đã giao":
            case "delivered":
                return "bg-success";
            case "đã hủy":
            case "cancelled":
                return "bg-danger";
            default:
                return "bg-secondary";
        }
    }
}

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<!-- Breadcrumb Section -->
<section class="breadcrumb-section position-relative overflow-hidden">
    <div class="breadcrumb-bg"></div>
    <div class="breadcrumb-overlay"></div>
    <div class="container position-relative">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-content text-white">
                    <h1 class="h2 fw-bold mb-3 animate__animated animate__fadeInUp">Chi tiết đơn hàng</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 animate__animated animate__fadeInUp animate__delay-1s">
