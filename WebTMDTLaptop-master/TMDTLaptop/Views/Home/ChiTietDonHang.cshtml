                                <a href="@Url.Action("Index", "Home")" class="text-white-50 text-decoration-none">
                                    <i class="fas fa-home me-1"></i>Trang chủ
                                </a>
                            </li>
                            <li class="breadcrumb-item active text-white" aria-current="page">
                                Chi tiết đơn hàng
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Order Detail Section -->
<section class="order-detail-section py-5">
    <div class="container">
        <!-- Order Header -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="order-header-card card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-lg-8">
                                <div class="order-info">
                                    @if (ViewBag.Order != null)
                                    {
                                        string trangThaiValue = ViewBag.Order.TrangThai != null ? ViewBag.Order.TrangThai.ToString() : "";
                                        string statusClass = GetStatusClass(trangThaiValue);
                                        
                                        <h2 class="order-title fw-bold text-dark mb-3">
                                            <i class="fas fa-receipt text-primary me-2"></i>
                                            Mã đơn hàng: <span class="text-primary">@ViewBag.Order.MaDonHang</span>
                                        </h2>

                                        <div class="order-meta">
                                            <div class="row g-3">
                                                <div class="col-md-6">
                                                    <div class="meta-item d-flex align-items-center">
                                                        <i class="fas fa-calendar-alt text-muted me-2"></i>
                                                        <span class="fw-bold me-2">Ngày lập:</span>
                                                        <span class="text-muted">@ViewBag.Order.NgayDatHang.ToString("dd/MM/yyyy")</span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="meta-item d-flex align-items-center">
                                                        <i class="fas fa-info-circle text-muted me-2"></i>
                                                        <span class="fw-bold me-2">Trạng thái:</span>
                                                        <span class="status-badge badge @statusClass fs-6">
                                                            @trangThaiValue
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else if (ViewBag.ErrorMessage != null)
                                    {
                                        <div class="alert alert-danger">
                                            @ViewBag.ErrorMessage
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                                @if (ViewBag.Order != null)
                                {
                                    <div class="order-total">
                                        <div class="total-amount">
                                            <span class="total-label text-muted d-block">Tổng tiền:</span>
                                            <span class="total-value h3 fw-bold text-success mb-0">
                                                @ViewBag.Order.TongTien.ToString("N0") đ
                                            </span>
                                        </div>

                                        @if (ViewBag.GiamGia != null)
                                        {
                                            <div class="discount-info mt-2">
                                                <span class="badge bg-danger fs-6">
                                                    <i class="fas fa-tag me-1"></i>
                                                    Giảm @ViewBag.GiamGia%
                                                </span>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Items -->
        <div class="row">
            <div class="col-12">
                <div class="order-items-card card border-0 shadow-sm">
                    <div class="card-header bg-light border-0 p-4">
                        <h4 class="card-title fw-bold text-dark mb-0">
                            <i class="fas fa-shopping-bag text-primary me-2"></i>
                            Chi tiết sản phẩm trong đơn hàng
                        </h4>
                    </div>

                    <div class="card-body p-0">
                        <!-- Desktop Table View -->
                        <div class="table-responsive d-none d-md-block">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="py-3 px-4 fw-bold text-uppercase small">Tên sản phẩm</th>
                                        <th class="py-3 px-4 fw-bold text-uppercase small text-center">Số lượng</th>
                                        <th class="py-3 px-4 fw-bold text-uppercase small text-end">Đơn giá</th>
                                        <th class="py-3 px-4 fw-bold text-uppercase small text-end">Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.ChiTietDonHang != null)
                                    {
                                    foreach (var item in ViewBag.ChiTietDonHang)
                                    {
                                        <tr class="order-item-row">
                                            <td class="py-3 px-4">
                                                <div class="product-info">
                                                    <h6 class="product-name fw-bold mb-0 text-dark">@item.TenSanPham</h6>
                                                </div>
                                            </td>
                                            <td class="py-3 px-4 text-center">
                                                <span class="quantity-badge badge bg-light text-dark fs-6 px-3 py-2">
                                                    @item.SoLuong
                                                </span>
                                            </td>
                                            <td class="py-3 px-4 text-end">
                                                <span class="price fw-bold text-muted">@item.Gia.ToString("N0") đ</span>
                                            </td>
                                            <td class="py-3 px-4 text-end">
                                                <span class="subtotal fw-bold text-primary">@((item.Gia * item.SoLuong).ToString("N0")) đ</span>
                                            </td>
                                        </tr>
                                    }
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    @if (ViewBag.Order != null)
                                    {
                                    <tr>
                                        <td colspan="3" class="py-3 px-4 text-end fw-bold">Tổng cộng:</td>
                                        <td class="py-3 px-4 text-end">
                                            <span class="h5 fw-bold text-success mb-0">@ViewBag.Order.TongTien.ToString("N0") đ</span>
                                        </td>
                                    </tr>
                                    }
                                </tfoot>
                            </table>
                        </div>

                        <!-- Mobile Card View -->
                        <div class="mobile-order-items d-md-none p-3">
                            @if (ViewBag.ChiTietDonHang != null)
                            {
                            foreach (var item in ViewBag.ChiTietDonHang)
                            {
                                <div class="mobile-item-card card border mb-3">
                                    <div class="card-body p-3">
                                        <div class="row align-items-center">
                                            <div class="col-8">
                                                <h6 class="product-name fw-bold mb-2 text-dark">@item.TenSanPham</h6>
                                                <div class="product-meta">
                                                    <span class="text-muted small">Số lượng: </span>
                                                    <span class="badge bg-light text-dark">@item.SoLuong</span>
                                                </div>
                                            </div>
                                            <div class="col-4 text-end">
                                                <div class="price-info">
                                                    <div class="unit-price text-muted small">@item.Gia.ToString("N0") đ</div>
                                                    <div class="total-price fw-bold text-primary">@((item.Gia * item.SoLuong).ToString("N0")) đ</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            }

                            <!-- Mobile Total -->
                            @if (ViewBag.Order != null)
                            {
                            <div class="mobile-total-card card bg-light border-0">
                                <div class="card-body p-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h6 class="fw-bold mb-0">Tổng cộng:</h6>
                                        <h5 class="fw-bold text-success mb-0">@ViewBag.Order.TongTien.ToString("N0") đ</h5>
                                    </div>
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="action-buttons text-center">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg px-5 py-3 rounded-pill me-3">
                        <i class="fas fa-home me-2"></i>
                        Trở về trang chủ
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
