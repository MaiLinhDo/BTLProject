// Update quantity function
function updateQuantity(productId, quantity) {
    showLoading(true);
    fetch('@Url.Action("CapNhatGioHang", "Home")', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: `productId=${productId}&quantity=${quantity}`
    })
    .then(response => response.json())
    .then(data => {
        showLoading(false);
        if (data.success) {
            // Update quantity in UI
            const input = document.querySelector(`input[data-id="${productId}"]`);
            if (input) {
                input.value = quantity;
            }

            // ====== NEW: Update subtotal of the product ======
            const priceElement = document.querySelector(`.product-price[data-id="${productId}"]`);
            const subtotalElement = document.querySelector(`.product-subtotal[data-id="${productId}"]`);

            if (priceElement && subtotalElement) {
                const price = parseInt(priceElement.textContent.replace(/[^\d]/g, '')) || 0;
                const newSubtotal = price * quantity;
                subtotalElement.textContent = newSubtotal.toLocaleString() + "₫";
            }

            // Add animation
            const row = document.querySelector(`tr[data-product-id="${productId}"], .mobile-cart-item[data-product-id="${productId}"]`);
            if (row) {
                row.classList.add('quantity-updated');
                setTimeout(() => row.classList.remove('quantity-updated'), 600);
            }
            // Update subtotal and total
            updateCartTotals();
            showToast(data.message || 'Cập nhật số lượng thành công', 'success');
        } else {
            showToast('Có lỗi xảy ra, vui lòng thử lại!', 'error');
        }
    })
    .catch(error => {
        showLoading(false);
        console.error('Error:', error);
        showToast('Có lỗi xảy ra, vui lòng thử lại!', 'error');
    });
}

