@{
    ViewBag.Title = "Chi tiết yêu cầu đổi trả";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<style>
    .page-header {
        background: linear-gradient(135deg, rgba(13, 110, 253, 0.8), rgba(108, 117, 125, 0.6));
        padding: 2rem 0;
        margin-bottom: 3rem;
        color: white;
    }

    .detail-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .detail-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        overflow: hidden;
        margin-bottom: 2rem;
    }

    .card-header {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 1.5rem 2rem;
        border-bottom: 1px solid #e9ecef;
    }

    .card-header h4 {
        color: #212529;
        font-weight: 600;
        margin: 0;
    }

    .card-body {
        padding: 2rem;
    }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .info-item {
        background: #f8f9fa;
        padding: 1rem;
        border-radius: 8px;
        border-left: 4px solid #0d6efd;
    }

    .info-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .info-value {
        color: #212529;
        font-size: 1rem;
    }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
        display: inline-block;
    }

    .status-cho-xu-ly { background: #ffc107; color: #000; }
    .status-da-duyet { background: #0dcaf0; color: #000; }
    .status-dang-xu-ly { background: #0d6efd; color: #fff; }
    .status-da-xu-ly { background: #198754; color: #fff; }
    .status-tu-choi { background: #dc3545; color: #fff; }

    .description-section {
        background: #fff3cd;
        border: 1px solid #ffeaa7;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .description-section h5 {
        color: #856404;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .description-text {
        color: #856404;
        line-height: 1.6;
        margin: 0;
    }

    .images-section {
        margin-bottom: 2rem;
    }

    .images-section h5 {
        color: #212529;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .images-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 1rem;
    }

    .image-item {
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .image-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

    .image-item img {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }

    .products-section {
        margin-bottom: 2rem;
    }

    .product-item {
        display: flex;
        align-items: center;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 8px;
        margin-bottom: 1rem;
        border-left: 4px solid #0d6efd;
    }

    .product-image {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 6px;
        margin-right: 1rem;
    }

    .product-info {
        flex: 1;
    }

    .product-name {
        font-weight: 600;
        color: #212529;
        margin-bottom: 0.5rem;
    }

    .product-details {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .product-price {
        font-weight: 600;
        color: #0d6efd;
        font-size: 1.1rem;
    }

    .back-btn {
        background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .back-btn:hover {
        background: linear-gradient(135deg, #495057 0%, #343a40 100%);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        color: white;
        text-decoration: none;
    }

    .image-modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.9);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    }

    .image-modal img {
        max-width: 90%;
        max-height: 90%;
        border-radius: 8px;
    }

    .image-modal .close-btn {
        position: absolute;
        top: 20px;
        right: 20px;
        color: white;
        font-size: 2rem;
        cursor: pointer;
        font-weight: bold;
        background: rgba(0,0,0,0.5);
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .no-images {
        text-align: center;
        color: #6c757d;
        font-style: italic;
        padding: 2rem;
        background: #f8f9fa;
        border-radius: 8px;
    }

    @@media (max-width: 768px) {
        .detail-container {
            padding: 0 1rem;
        }

        .info-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .card-body {
            padding: 1.5rem;
        }

        .product-item {
            flex-direction: column;
            text-align: center;
        }

        .product-image {
            margin-right: 0;
            margin-bottom: 1rem;
        }

        .images-grid {
            grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        }
    }
</style>

<div class="page-header">
    <div class="container">
      
    </div>
</div>

<main class="detail-container">
    <!-- Thông tin cơ bản -->
    <div class="detail-card">
        <div class="card-header">
            <h4>Thông tin yêu cầu đổi trả</h4>
        </div>
        <div class="card-body">
            <div class="info-grid">
                <div class="info-item">
                    <div class="info-label">Mã yêu cầu</div>
                    <div class="info-value">#@ViewBag.ChiTiet.MaDoiTra</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Mã đơn hàng</div>
                    <div class="info-value">
                        <a href="@Url.Action("ChiTietDonHang", "Home", new { id = ViewBag.ChiTiet.MaDonHang })"
                           style="color: #0d6efd; text-decoration: none;">
                            #@ViewBag.ChiTiet.MaDonHang
                        </a>
                    </div>
                </div>
                <div class="info-item">
                    <div class="info-label">Loại yêu cầu</div>
                    <div class="info-value">@ViewBag.ChiTiet.LoaiYeuCau hàng</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Ngày tạo</div>
                    <div class="info-value">@ViewBag.ChiTiet.NgayTao</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Lý do</div>
                    <div class="info-value">@ViewBag.ChiTiet.LyDo</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Trạng thái</div>
                    <div class="info-value">
                        @{
                            string statusClass = "";
                            switch (ViewBag.ChiTiet.TrangThai?.ToString() ?? "")
                            {
                                case "Chờ xử lý": statusClass = "status-cho-xu-ly"; break;
                                case "Đã duyệt": statusClass = "status-da-duyet"; break;
                                case "Đang xử lý": statusClass = "status-dang-xu-ly"; break;
                                case "Đã xử lý": statusClass = "status-da-xu-ly"; break;
                                case "Từ chối": statusClass = "status-tu-choi"; break;
                                default: statusClass = "status-cho-xu-ly"; break;
                            }
                        }
                        <span class="status-badge @statusClass">@ViewBag.ChiTiet.TrangThai</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mô tả chi tiết -->
    <div class="detail-card">
        <div class="card-header">
            <h4>Mô tả chi tiết vấn đề</h4>
        </div>
        <div class="card-body">
            <div class="description-section">
                <h5>Mô tả từ khách hàng:</h5>
                <p class="description-text">@ViewBag.ChiTiet.MoTa</p>
            </div>
        </div>
    </div>

    <!-- Hình ảnh đính kèm -->
    <div class="detail-card">
        <div class="card-header">
            <h4>Hình ảnh đính kèm</h4>
        </div>
        <div class="card-body">
            <div class="images-section">
                @if (ViewBag.ChiTiet.HinhAnhLoi != null && ViewBag.ChiTiet.HinhAnhLoi.Count > 0)
                {
                    <h5>Hình ảnh minh chứng (@ViewBag.ChiTiet.HinhAnhLoi.Count ảnh)</h5>
                    <div class="images-grid">
                        @foreach (var image in ViewBag.ChiTiet.HinhAnhLoi)
                        {
                            <div class="image-item" onclick="showImageModal('/assets/images/returns/@ViewBag.ChiTiet.MaDoiTra/@image')">
                                <img src="~/assets/images/returns/@ViewBag.ChiTiet.MaDoiTra/@image"
                                     alt="Hình ảnh minh chứng"
                                     onerror="this.src='~/assets/images/no-image.png'">
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="no-images">
                        <p>Không có hình ảnh đính kèm</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Thông tin đơn hàng -->
    <div class="detail-card">
        <div class="card-header">
            <h4>Thông tin đơn hàng #@ViewBag.ChiTiet.MaDonHang</h4>
        </div>
        <div class="card-body">
            <div class="info-grid">
                <div class="info-item">
                    <div class="info-label">Khách hàng</div>
                    <div class="info-value">@ViewBag.ChiTiet.TenKhachHang</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Số điện thoại</div>
                    <div class="info-value">@ViewBag.ChiTiet.SoDienThoai</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Email</div>
                    <div class="info-value">@ViewBag.ChiTiet.Email</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Ngày đặt hàng</div>
                    <div class="info-value">@ViewBag.ChiTiet.NgayDatHang</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Tổng tiền</div>
                    <div class="info-value">@string.Format("{0:N0} đ", ViewBag.ChiTiet.TongTien)</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Địa chỉ giao hàng</div>
                    <div class="info-value">@ViewBag.ChiTiet.DiaChiGiaoHang</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sản phẩm trong đơn hàng -->
    <div class="detail-card">
        <div class="card-header">
            <h4>Sản phẩm trong đơn hàng</h4>
        </div>
        <div class="card-body">
            <div class="products-section">
                @if (ViewBag.ChiTiet.Products != null)
                {
                    foreach (var product in ViewBag.ChiTiet.Products)
                    {
                        <div class="product-item">
                            <img src="~/assets/images/product/@product.MaSanPham/@product.HinhAnh"
                                 alt="@product.TenSanPham" class="product-image"
                                 onerror="this.src='~/assets/images/no-image.png'">
                            <div class="product-info">
                                <div class="product-name">@product.TenSanPham</div>
                                <div class="product-details">
                                    Mã sản phẩm: #@product.MaSanPham<br>
                                    Số lượng: @product.SoLuong
                                </div>
                            </div>
                            <div class="product-price">
                                @string.Format("{0:N0} đ", product.Gia)
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">Không có thông tin sản phẩm</p>
                }
            </div>
        </div>
    </div>

    <!-- Nút quay lại -->
    <div style="text-align: center; margin: 2rem 0;">
        <a href="@Url.Action("DanhSachDoiTra", "Home")" class="back-btn">
            <i class="fas fa-arrow-left"></i>
            Quay lại danh sách
        </a>
    </div>
</main>

<!-- Image Modal -->
<div id="imageModal" class="image-modal">
    <span class="close-btn">&times;</span>
    <img id="modalImage" src="" alt="Hình ảnh phóng to">
</div>

<script>
// Image modal functions
function showImageModal(imageSrc) {
    const modal = document.getElementById('imageModal');
    const modalImage = document.getElementById('modalImage');
    modalImage.src = imageSrc;
    modal.style.display = 'flex';
}

// Close modal when clicking close button or outside
document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('imageModal');
    const closeBtn = modal.querySelector('.close-btn');

    closeBtn.onclick = function() {
        modal.style.display = 'none';
    }

    modal.onclick = function(e) {
        if (e.target === modal) {
            modal.style.display = 'none';
        }
    }

    // Close modal with ESC key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && modal.style.display === 'flex') {
            modal.style.display = 'none';
        }
    });
});
</script>