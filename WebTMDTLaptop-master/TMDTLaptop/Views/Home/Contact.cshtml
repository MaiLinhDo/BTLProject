    }
}

.animate__animated {
    animation-duration: 1s;
    animation-fill-mode: both;
}

.animate__fadeInUp {
    animation-name: fadeInUp;
}

.animate__delay-1s {
    animation-delay: 1s;
}

/* Hover Effects */
.hover-lift {
    transition: var(--transition);
}

.hover-lift:hover {
    transform: translateY(-5px);
}

/* Responsive Design */
media (max-width: 992px) {
    .contact-section {
        min-height: auto;
    }

    .section-header,
    .form-header {
        text-align: center;
        margin-bottom: 2rem;
    }

